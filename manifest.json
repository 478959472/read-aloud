{
  "manifest_version": 2,

  "name": "Read Aloud",
  "description": "Read aloud the current webpage article with one click.",
  "version": "0.0.0.2",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "tts", "storage"
  ],
  "background": {
    "scripts": ["js/es6-promise.auto.min.js", "js/defaults.js", "js/events.js"],
    "persistent": false
  },
  "options_page": "options.html"
}
