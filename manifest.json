{
  "manifest_version": 2,

  "name": "Read Aloud",
  "description": "Text to speech that just works.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "tts", "storage"
  ],
  "background": {
    "scripts": ["js/defaults.js", "js/events.js"],
    "persistent": false
  },
  "options_page": "options.html"
}
