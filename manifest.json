{
  "manifest_version": 2,

  "name": "Read Aloud",
  "description": "Read aloud the current webpage article with one click.",
  "version": "0.0.0.2",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "tts", "storage", "ttsEngine"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "js/es6-promise.auto.min.js",
      "js/responsivevoice.js",
      "js/defaults.js",
      "js/vietnamese.js",
      "js/events.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",

  "tts_engine": {
    "voices": [
      {
        "voice_name": "RspVoice Vietnamese Male",
        "lang": "vi",
        "gender": "male",
        "event_types": ["start", "end"],
        "remote": true
      }
    ]
  }
}
